<Window x:Class="MCPArtNavi.UserApp.DocumentPropertyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCPArtNavi.UserApp"
        mc:Ignorable="d"
        Title="Document Property" Height="450" Width="800">
    <Window.DataContext>
        <local:DocumentPropertyWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <DataGrid ItemsSource="{Binding UsedMCItems}" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Item name" Binding="{Binding Item.ItemName}"/>
                <DataGridTextColumn Header="Item usage" Binding="{Binding Count}"/>
            </DataGrid.Columns>
            
        </DataGrid>
    </Grid>
</Window>
